{{> header}}
    {{> nav}}
    <div class="alert alert-success" id="callUs"role="alert">
      <b>Call us Today! (302) 743-0040</b>
    </div>
    <form id="contactForm" class="contact col-6 offset-3">
      <div class="form-row">
        <div class="form-group col-md-6">
          <label for="exampleFormControlInput1">Email Address</label>
          <input type="email" class="form-control" id="email" placeholder="name@example.com">
        </div>
        <div class="form-group col-md-5 offset-1">
          <label for="phoneNumber">Phone Number (Optional)</label>
          <input type="tel" class="form-control" id="phone" placeholder="(xxx)-xxx-xxxx">
        </div>
      </div>

        <div class="form-group">
          <label for="serviceSelect">What Can we Help You With?</label>
          <select class="form-control" id="serviceSelect">
            <option>Lawn Mowing</option>
            <option>Cleanup</option>
            <option>Mulching</option>
            <option>Landscaping/Design</option>
            <option>Other</option>
          </select>
        </div>
        <div class="form-row">
            <div class="form-group col-md-6">
              <label for="inputCity">City</label>
              <input type="text" class="form-control" id="inputCity" placeholder="city...">
            </div>
            <div class="form-group col-md-4 offset-2">
              <label for="inputState">State</label>
              <select id="inputState" class="form-control">
                <option selected>Choose...</option>
                <option>DE</option>
                <option>MD</option>
                <option>PA</option>
                <option>NJ</option>
              </select>
            </div>
        </div>
        <div class="form-group">
          <label for="exampleFormControlTextarea1"></label>
          <textarea class="form-control" id="comments" rows="3" placeholder="Please leave your phone number and a description of how we can help you."></textarea>
        </div><br>
        <button type="submit" class="btn btn-warning">Submit</button>&emsp;<span class="text-muted"><i>We won't share your info with anyone</i></span>
      </form>

      <script src="/js/formLogic.js"></script>
{{> footer}}